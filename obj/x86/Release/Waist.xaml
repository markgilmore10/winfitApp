        <TextBlock x:ConnectionId='11' x:Name="Exercise8"  HorizontalAlignment="Center" Height="42" Margin="10,460,0,0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Width="350" FontFamily="Gill Sans Ultra Bold" FontSize="20" FontWeight="Bold" Foreground="White" />
        <TextBlock x:ConnectionId='12' x:Name="Exercise9"  HorizontalAlignment="Center" Height="42" Margin="10,500,0,0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Width="350" FontFamily="Gill Sans Ultra Bold" FontSize="20" FontWeight="Bold" Foreground="White" />

        <Button x:ConnectionId='13' x:Name="Home" Content="HOME" HorizontalAlignment="Center" Margin="0,550,0,0" VerticalAlignment="Top" Width="340" Foreground = "Black" FontFamily="Gill Sans Ultra Bold" FontSize="20" Background="Gray" FontWeight="Bold"                   />

    </Grid>
</Page>

