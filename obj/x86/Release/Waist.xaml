        <TextBlock x:ConnectionId='8' x:Name="Exercise5"  HorizontalAlignment="Center" Height="42" Margin="10,340,0,0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Width="350" FontFamily="Gill Sans Ultra Bold" FontSize="20" FontWeight="Bold" Foreground="White" />
        <TextBlock x:ConnectionId='9' x:Name="Exercise6"  HorizontalAlignment="Center" Height="42" Margin="10,380,0,0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Width="350" FontFamily="Gill Sans Ultra Bold" FontSize="20" FontWeight="Bold" Foreground="White" />
